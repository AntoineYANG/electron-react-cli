{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "contributors": [
    "Zhendong Yang antoineyang99@gmail.com (https://github.com/AntoineYANG)"
  ],
  "scripts": {
    "build:bin": "cd bin && tsc || exit 1",
    "test:bin": "npm run build:bin && cd bin && jest --coverage --verbose || exit 1",
    "dev:bin": "nodemon -w ./bin/**/*.ts -e ts --exec \"npm run build:bin\"",
    "build": "cross-env NODE_ENV=production node tasks/build.js",
    "publish": "node tasks/publish.js",
    "lint": "node tasks/lint.js"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@types/mkdirp": "^1.0.2",
    "@types/needle": "^2.5.2",
    "@types/node": "^16.11.7",
    "@types/semver": "^7.3.9",
    "@typescript-eslint/eslint-plugin": "^4.3.1",
    "@typescript-eslint/parser": "^4.3.1",
    "chalk": "^3.1.2",
    "compressing": "^0.5.1",
    "eslint": "^7.2.0",
    "husky": "3.3.8",
    "jest": "^26.3.1",
    "jest-config": "^26.3.1",
    "lint-staged": "^10.2.6",
    "listr1": "^3.13.3",
    "mkdirp": "^0.0.4",
    "needle": "^2.0.0",
    "nodemon": "^1.0.15",
    "semver": "^6.3.5",
    "ts-jest": "^26.0.7",
    "ts-loader": "^8.2.6",
    "typescript": "^3.4.4",
    "webpack": "^4.63.0",
    "webpack-cli": "^3.9.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "node ./hooks/pre-commit.js --color",
      "commit-msg": "node ./hooks/commit-msg.js $HUSKY_GIT_PARAMS"
    }
  }
}
