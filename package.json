{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "contributors": [
    "Zhendong Yang antoineyang99@gmail.com (https://github.com/AntoineYANG)"
  ],
  "scripts": {
    "build:bin": "cd bin && tsc || exit 1",
    "test:bin": "npm run build:bin && cd bin && jest --coverage --verbose || exit 1",
    "dev:bin": "nodemon -w ./bin/**/*.ts -e ts --exec \"npm run build:bin\"",
    "build": "cross-env NODE_ENV=production node tasks/build.js",
    "publish": "node tasks/publish.js",
    "lint": "node tasks/lint.js"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@types/mkdirp": "^1.0.2",
    "@types/needle": "^2.5.2",
    "@types/node": "^16.11.7",
    "@types/semver": "^7.3.9",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "chalk": "^4.1.2",
    "compressing": "^1.5.1",
    "eslint": "^8.2.0",
    "husky": "4.3.8",
    "jest": "^27.3.1",
    "jest-config": "^27.3.1",
    "lint-staged": "^11.2.6",
    "mkdirp": "^1.0.4",
    "needle": "^3.0.0",
    "nodemon": "^2.0.15",
    "semver": "^7.3.5",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.4",
    "webpack": "^5.63.0",
    "webpack-cli": "^4.9.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "node ./hooks/pre-commit.js --color",
      "commit-msg": "node ./hooks/commit-msg.js $HUSKY_GIT_PARAMS"
    }
  }
}
